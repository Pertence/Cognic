<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="portrait"
    tools:context="com.pertence.cognic.MarketPaymentActivity">

    <TableLayout
        style="@style/Table"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow style="@style/Table">

            <TextView
                android:layout_weight="1"
                android:text="@string/text_market_payment" />
        </TableRow>

        <TableRow style="@style/Table">

            <TableRow
                android:layout_width="0dp"
                android:layout_weight="1"
                android:paddingRight="4dp">

                <ImageButton
                    android:id="@+id/imagebutton_market_payment1"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/real01" />

            </TableRow>

            <TableRow
                android:layout_width="0dp"
                android:layout_weight="1"
                android:paddingLeft="4dp">

                <ImageButton
                    android:id="@+id/imagebutton_market_payment2"
                    style="@style/Widget.AppCompat.ImageButton"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/real02" />
            </TableRow>

        </TableRow>

        <TableRow style="@style/Table">

            <TableRow
                android:layout_width="0dp"
                android:layout_weight="1"
                android:paddingRight="4dp">

                <ImageButton
                    android:id="@+id/imagebutton_market_payment3"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/real05" />

            </TableRow>

            <TableRow
                android:layout_width="0dp"
                android:layout_weight="1"
                android:paddingLeft="4dp">

                <ImageButton
                    android:id="@+id/imagebutton_market_payment4"
                    style="@style/Widget.AppCompat.ImageButton"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/real10" />
            </TableRow>

        </TableRow>

        <TableRow
            style="@style/Table"
            android:layout_weight="1">

            <TableRow
                android:layout_width="0dp"
                android:layout_gravity="top"
                android:layout_weight="1"
                android:paddingRight="4dp">

                <ImageButton
                    android:id="@+id/imagebutton_market_payment5"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/real20" />
            </TableRow>

            <TableRow
                android:layout_width="0dp"
                android:layout_gravity="top"
                android:layout_weight="1"
                android:paddingLeft="4dp">

                <ImageButton
                    android:id="@+id/imagebutton_market_payment6"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/real50" />
            </TableRow>

        </TableRow>

        <TableRow style="@style/Table">

            <TextView android:id="@+id/textview_market_payment2" />

        </TableRow>

        <TableRow style="@style/Table">

            <TextView android:id="@+id/textview_market_payment3" />
        </TableRow>

        <TableRow style="@style/Table">

            <TextView android:id="@+id/textview_market_payment4" />
        </TableRow>

        <TableRow style="@style/Table">

            <Button
                android:id="@+id/button_market_payment"
                android:text="@string/button_market_payment"
                android:visibility="invisible" />
        </TableRow>

    </TableLayout>


</LinearLayout>
